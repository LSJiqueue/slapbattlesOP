local userinputservice = game:GetService("UserInputService")
getgenv().Enabled = true 
getgenv().EnabledReaper = true
getgenv().EnabledBoomerang = true 
local players = game:GetService("Players")
function killstreak(input, IsTyping) 
	if IsTyping == true then return end 
	if input.KeyCode == Enum.KeyCode.E then 
		print("Pressed E")
		while getgenv().Enabled == true do 
            if getgenv().Enabled == true then 
                task.wait()
                local allplayers = players:GetPlayers() -- all the players in the server
                for i, v in pairs(allplayers) do 
                    task.wait()
                    if v:IsA("Player") then 
                        local name = v.Name 
                        local args = {[1] = players[v.Name].Character:FindFirstChild("Right Arm")}
                        game:GetService("ReplicatedStorage"):WaitForChild("KSHit"):FireServer(unpack(args))
                    end 
                end 
            end 
        end 
	end
end
userinputservice.InputBegan:Connect(killstreak)
function reaper(input, isTyping)
	if isTyping == true then return end 
	if input.KeyCode == Enum.KeyCode.P then 
		print("Pressed P")
        while getgenv().EnabledReaper == true do 
            if getgenv().EnabledReaper == true then 
                task.wait()
                local allplayers = players:GetPlayers() -- all the players in the server
                for i, v in pairs(allplayers) do 
                    task.wait()
                    if v:IsA("Player") then 
                        local name = v.Name 
                        local args = {[1] = players[v.Name].Character:FindFirstChild("Right Arm")}
                        game:GetService("ReplicatedStorage"):WaitForChild("ReaperHit"):FireServer(unpack(args))
                    end 
                end 
            end 
        end 
	end
end
userinputservice.InputBegan:Connect(reaper)
function boomerang(input, isTyping)
	if isTyping == true then return end 
	if input.KeyCode == Enum.KeyCode.N then 
		print("Pressed N")
        while getgenv().EnabledBoomerang == true do 
            task.wait()
            if getgenv().EnabledBoomerang == true then 
                local allplayers = players:GetPlayers() -- all the players in the server
                for i, v in pairs(allplayers) do 
                    task.wait()
                    local name = v.Name 
                    local args = {[1] = players[v.Name].Character:FindFirstChild("Right Arm")}
                    game:GetService("ReplicatedStorage"):WaitForChild("BoomerangH"):FireServer(unpack(args))

                end 
            end
        end 
	end
end
userinputservice.InputBegan:Connect(boomerang)
